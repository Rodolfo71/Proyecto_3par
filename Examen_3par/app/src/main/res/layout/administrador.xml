<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistema de Administración"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp" />

    <!-- Registro de Empleados -->
    <Button
        android:id="@+id/btnRegisterEmployees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Empleados"
        android:padding="16dp" />

    <!-- Lista de Empleados -->
    <Button
        android:id="@+id/btnEmployeeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Empleados"
        android:padding="16dp" />

    <!-- Historial de Ventas -->
    <Button
        android:id="@+id/btnSalesHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de Ventas"
        android:padding="16dp" />

    <!-- Lista de Órdenes de Meseros -->
    <Button
        android:id="@+id/btnWaiterOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Órdenes de Meseros"
        android:padding="16dp" />

    <!-- Lista de Órdenes de Cocineros -->
    <Button
        android:id="@+id/btnCookOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Órdenes de Cocineros"
        android:padding="16dp" />

    <!-- Cambiar Contraseña -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar Contraseña"
        android:padding="16dp" />

    <!-- Cerrar Sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:padding="16dp" />

</LinearLayout>
